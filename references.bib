@article{amato-lourencoPresenceAirborneMicroplastics2021,
  title = {Presence of Airborne Microplastics in Human Lung Tissue},
  author = {{Amato-Louren{\c c}o}, Lu{\'i}s Fernando and {Carvalho-Oliveira}, Regiani and J{\'u}nior, Gabriel Ribeiro and {dos Santos Galv{\~a}o}, Luciana and Ando, R{\^o}mulo Augusto and Mauad, Thais},
